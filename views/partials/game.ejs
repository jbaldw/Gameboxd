<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#"><%= gameTitle %></a>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= gameCoverArtUrl %>" alt="<%= gameTitle %> Cover Art" class="img-fluid rounded mt-3">
      </div>
      <div class="col-md-8">
        <h2 class="mt-3">Game Information</h2>
        <ul class="list-group">
          <li class="list-group-item">Developer: <%= gameDeveloper %></li>
          <li class="list-group-item">Publisher: <%= gamePublisher %></li>
          <li class="list-group-item">Release Date: <%= gameReleaseDate %></li>
          <li class="list-group-item">Platform(s): <%= gamePlatforms %></li>
          <li class="list-group-item">Genre: <%= gameGenre %></li>
          <li class="list-group-item">Mode(s): <%= gameModes %></li>
          <li class="list-group-item">ESRB Rating: <%= gameEsrbRating %></li>
        </ul>

        <h2 class="mt-3">Game Description</h2>
        <p><%= gameDescription %></p>

        <h2 class="mt-3">Gameplay Features</h2>
        <ul class="list-group">
          <% for (var i = 0; i < gameFeatures.length; i++) { %>
            <li class="list-group-item"><%= gameFeatures[i] %></li>
          <% } %>
        </ul>

        <h2 class="mt-3">Reviews</h2>
        <ul class="list-group">
          <% for (var i = 0; i < gameReviews.length; i++) { %>
            <li class="list-group-item"><%= gameReviews[i] %></li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>